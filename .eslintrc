{
  "extends": "react-app",
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "indent": ["error", 2, {"SwitchCase": 1}],
    "semi": ["error", "always"],
    "sort-keys": ["warn", "asc", {"caseSensitive": false, "natural": true}],
    "no-mixed-operators": [
      "warn",
      {
        "groups": [
          ['&', '|', '^', '~', '<<', '>>', '>>>'],
          ['==', '!=', '===', '!==', '>', '>=', '<', '<='],
          ['in', 'instanceof']
        ],
        "allowSamePrecedence": true
      }
    ]
  }
}
